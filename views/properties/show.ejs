<% include ../partials/header %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">CB Platinum - Home User System</p>
			<div class="list-group">
				<li class="list-group-item active">Inspections</li>
				<li class="list-group-item">Cleaning Rota</li>
				<li class="list-group-item">Linen Delivery</li>
				<li class="list-group-item">Outstanding Issues</li>
				<li class="list-group-item"><a href="/properties" class="btn btn-info">Back</a></li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="image-responsive" src="<%= property.image %>">
				<div class="caption-full">
					<h4 class="pull-right">Â£220/night</h4>
					<h4><a><%= property.propertyName %></a></h4>
					<p><i class="fas fa-bed"></i><%= property.beds %> - <i class="fas fa-bath"></i><%= property.baths %> - <i class="fas fa-couch"></i><%= property.receptions %></p>
					<a href="/properties/<%= property._id %>/edit" clas="btn btn-warning">Edit</a>
			</div>
		</div>
			
		<div class="well">
                <div class="text-right">
                    <a href="/properties/<%= property._id %>/inspections/new" class="btn btn-success">Add New Inspection</a>
                </div>
                <hr>
                    <% property.inspections.forEach(function(inspection){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong>Created by: <%= inspection.author.username %></strong>
                            <span class="pull-right"><%= inspection.date %></span>
                            <h3><%= inspection.inspectionName %></h3>
							<p>
								<a href="/properties/<%= property._id %>/inspections/<%= inspection._id %>/view" class="btn btn-primary">View / Edit Inspection</a>	
							</p>
							<% if(currentUser && currentUser.isAdmin){ %>
							<form class="deleteForm" action="/properties/<%=property._id %>/inspections/<%= inspection._id %>?_method=DELETE" method="POST">
								<button class="btn btn-danger">Delete</button>
							</form>
							<% } %>
                        </div>
                    </div>
                    <% }) %>
            </div>
		</div>
	</div>
</div>