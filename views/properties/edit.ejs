<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= property.propertyName %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/properties" method="POST">
                <div class="form-group"><input class="form-control" type="test" name="propertyId" placeholder="Property Id" required></div>
                <div class="form-group"><input class="form-control" type="text" name="name" placeholder="Short Property Name"></div>
                <div class="form-group"><input class="form-control" type="text" name="addressLineOne" placeholder="Address Line One"></div>
                <div class="form-group"><input class="form-control" type="text" name="addressLineTwo" placeholder="Address Line Two"></div>
                <div class="form-group"><input class="form-control" type="text" name="city" placeholder="City"></div>
                <div class="form-group"><input class="form-control" type="text" name="postcode" placeholder="Postcode"></div>
                <div class="form-group"><input class="form-control" type="text" name="propertyType" placeholder="Property Type"></div>
                <div class="form-group"><input class="form-control" type="number" name="beds" placeholder="No. Beds"></div>
                <div class="form-group"><input class="form-control" type="number" name="baths" placeholder="No. Baths"></div>
                <div class="form-group"><input class="form-control" type="number" name="receptions" placeholder="No. Receptions"></div>
				<div class="form-group"><input class="form-control" type="text" name="image" placeholder="Image Url"></div>
                <div class="form-group">  
					<input class="form-check-input" type="checkbox" name="property[outsideSpace]" id="outsideSpace" value="outsideSpace">
					<label class="form-check-label" for="outsideSpace">Outside Space</label>
				</div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-primary btn-block">Edit Property</button>
                </div>
            </form>
                 <a href="/campgrounds">Go Back</a>
        </div>
        
   
    </div>
</div>

<% include ../partials/footer %>